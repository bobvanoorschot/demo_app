<p style="color: green"><%= notice %></p>

<%= render @blog %>

<div>
  <% @comments.each do |comment|  %>
    <p><%= comment.id %> <%= comment.name %>, <i><%= comment.created_at %></i></p>
  <% end  %>
</div>

<div>
  <%= link_to "Edit this blog", edit_admin_blog_path(@blog) %> |
  <%= link_to "Back to blogs", admin_blogs_path %>

  <%= button_to "Delete", admin_blog_path(@blog), method: :delete %>
</div>
